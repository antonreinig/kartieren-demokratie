generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
  GUEST
}

enum ArtifactType {
  LINK
  PDF
  VIDEO
}

enum Agreement {
  AGREE
  DISAGREE
  NEUTRAL
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  pseudonym     String?
  avatarUrl     String?

  accounts     Account[]
  sessions     Session[]
  topics       Topic[]    @relation("CreatedTopics")
  artifacts    Artifact[]
  opinions     Opinion[]
  chatSessions ChatSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Topic {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?  // For context
  scope       String?  // Text explaining what is/isn't in scope
  
  startsAt    DateTime @default(now())
  endsAt      DateTime?
  
  adminToken  String   @unique // For the secret admin link
  creatorId   String
  creator     User     @relation("CreatedTopics", fields: [creatorId], references: [id])

  artifacts    Artifact[]
  chatSessions ChatSession[]
  profiles     UserProfile[]
  synthesis    PerspektiveSynthesis?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// AI-generated synthesis of all perspectives for a topic
model PerspektiveSynthesis {
  id              String   @id @default(cuid())
  
  topicId         String   @unique
  topic           Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  // Commonalities - shared values/goals across perspectives (max 4)
  // [{ text: "...", profileIds: [...] }]
  commonalities   Json
  
  // Tension fields with position-based clusters
  // [{ leftLabel: "Freiwilligkeit", rightLabel: "Zwang", 
  //    clusters: [{ position: 0.2, profileIds: [...], summary: "..." }] }]
  tensionFields   Json
  
  // Track when to regenerate
  profileCount    Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Artifact {
  id          String       @id @default(cuid())
  url         String
  type        ArtifactType
  title       String?
  description String?
  imageUrl    String?      // Open Graph preview image
  
  topicId     String
  topic       Topic        @relation(fields: [topicId], references: [id], onDelete: Cascade)

  contributorId String?
  contributor   User?      @relation(fields: [contributorId], references: [id])

  takeaways   Takeaway[]
  tags        Tag[]

  // AI Analysis Dashboard Data
  evidenceLevel     String?   // 'Hoch', 'Mittel', 'Niedrig'
  mainSource        String?   // 'Eigene Erfahrung', 'Studien', etc.
  contentCategories Json?     // { A: 20, B: 30, ... }

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Takeaway {
  id          String   @id @default(cuid())
  content     String
  
  artifactId  String
  artifact    Artifact @relation(fields: [artifactId], references: [id], onDelete: Cascade)

  opinions    Opinion[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id          String   @id @default(cuid())
  label       String
  
  artifactId  String
  artifact    Artifact @relation(fields: [artifactId], references: [id], onDelete: Cascade)
}

model Opinion {
  id          String    @id @default(cuid())
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  takeawayId  String
  takeaway    Takeaway  @relation(fields: [takeawayId], references: [id], onDelete: Cascade)

  agreement   Agreement?
  relevant    Boolean   @default(false)
  note        String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, takeawayId])
}

// Chat persistence models
model ChatSession {
  id          String   @id @default(cuid())
  
  topicId     String
  topic       Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  // For logged-in users
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // For guest users (stored in localStorage)
  guestToken  String?
  
  messages    ChatMessage[]
  profile     UserProfile?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Ensure unique session per user/topic or guest/topic
  @@unique([topicId, userId])
  @@index([topicId, guestToken])
}

model ChatMessage {
  id          String   @id @default(cuid())
  
  sessionId   String
  session     ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  role        String   // 'user' or 'assistant'
  content     String   @db.Text
  
  createdAt   DateTime @default(now())
}

// Deliberative Attitude Profile - Anonymous user perspective from chat
model UserProfile {
  id              String   @id @default(cuid())
  
  // Link to chat session (one profile per session)
  sessionId       String   @unique
  session         ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  topicId         String
  topic           Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  // Profile Header
  profileTitle    String   // 2-4 words short title
  subtitle        String?  // Optional, max ~8 words
  
  // A. Context & Role
  roleContext     String   @db.Text
  
  // B. Overall Attitude
  overallAttitude String   @db.Text
  
  // C. Core Values (JSON array of { label, description? })
  coreValues      Json
  
  // D1. Key Concerns (JSON array of { text, qualification? })
  keyConcerns     Json
  
  // D2. Red Lines (JSON array of { text, scope? })
  redLines        Json
  
  // E. Acknowledged Counterarguments (JSON array of { argument, whyUnderstood })
  counterarguments Json
  
  // F. Conditions for Change (JSON array of { conditionText, type })
  conditionsForChange Json
  
  // G. One-Sentence Characterization
  characterization String  @db.Text
  
  // Tracking when profile was generated
  messageCount    Int     @default(0)  // Number of user messages when generated
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

